<div class="hero-title d-flex flex-column mt-5">
  <div>
    <%= link_to root_path, class: "logo-button-style" do  %>
      <%= image_tag('usicz-logo.png', width: '80') %>
  </div>
    <div class="medium-logo">i!iusicz</div>
   <% end %>
</div>

<div class="align-items-center">
<div class="container d-flex justify-content-center">
  <div class="box m-5">
    <div class="d-flex justify-content-center">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle playlist-import p-bold" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Select music source
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Youtube <i class="fab fa-youtube fa-2x"></i></a>
          <a class="dropdown-item" href="#">SoundCloud <i class="fab fa-soundcloud fa-2x"></i></a>
          <a class="dropdown-item disabled" href="#">More coming soon!<i class="fas fa-ellipsis-h fa-2x"></i></a>
        </div>
      </div>
    </div>
    <br>
    <div class="d-flex justify-content-center">
      <form>
        <div class="form-group field mt-3">
          <input type="url" class="form-control" id="playlistUrl" placeholder="Paste the url of a playlist here">
        </div>
        <button type="submit" class="button-white a:hover">Import</button>
      </form>
    </div>
  </div>
</div>
