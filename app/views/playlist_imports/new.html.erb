          <option value="Soon">More coming soon!</option>
        </select>
 -->
        <div class="form-group">
          <label for="sourcePlatform">Source Platform</label>
          <select class="form-control form-control-lg" id="select-source">
            <option selected="">Select music source</option>
            <option>Youtube <i class="fab fa-youtube fa-2x"></i></option>
            <option>SoundCloud</option>
            <option>Deezer</option>
            <option>More coming soon!</option>
          </select>
        </div>

        <div class="form-group field mt-3">
          <input type="url" class="form-control" id="playlistUrl" placeholder="Paste the url of a playlist here">
        </div>
        <button type="submit" class="button-white a:hover">Import</button>
      </form>
    </div>
  </div>
</div>
