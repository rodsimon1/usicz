<div class="hero-section">
  <p class="sign:hover d-flex justify-content-end mx-4 pt-3 hero-top-action" style="z-index: 1">
    <% if current_user %>

      <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light no style" %>
    <% else %>
      <%= link_to "sign in", new_user_session_path, method: :get, class: "btn btn-outline-light no style" %>
    <% end %>
  </p>
  <div class="hero-title d-flex flex-column text-center">
    <div class="opening-logo">
      <%= link_to songs_path, class: "logo-button-style" do %>
        <div>
          <div class="usicz-logo-box">
            <%= image_tag('logodw-thin.png', width: '140') %>
          </div>
        </div>
        <div class="big-logo">i!iusicz</div>
      <% end %>
      <div class="play-music">Play music the right way.</div>
    </div>
    <div>
      <button class="btn-listen">
        <a href="<%= songs_path %>">listen now</a>
      </button>
    </div>
    <div class="scroll-down hero-bottom-action mb-3">
      <p class="nostyle mb-1" onclick="smoothScroll(document.getElementById('second'))">
        <i class="fas fa-angle-double-down arrow bounce"></i>
      </p>
    </div>
  </div>
</div>

<div class="second-page d-flex align-items-center justify-content-center">
  <div>
    <div class="h1 d-flex justify-content-center" id="second"> centralize your music in a unique place </div>
    <div class="container cards mb-5">
      <div class="card card-1">
        <p>1_ </p>
        <p>create your<br>account </p>
      </div>
      <div class="card card-2">
        <p>2_ </p>
        <p>import your<br>songs </p>
      </div>
      <div class="card card-3">
        <p>3_ </p>
        <p>listen to your<br>music </p>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button id="target" class="btn-listen-second">
        <a href="<%= songs_path %>">listen now</a>
      </button>
    </div>
  </div>
</div>

