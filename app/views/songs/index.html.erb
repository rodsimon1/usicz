<%= render 'shared/sidebar' %>

<div style="margin-left: 90px;">
  <br>

  <table class="table table-borderless table-hover">
    <thead class="">
      <!-- color: #F0EEEE -->
      <!-- hover: #C7C1C1 -->
      <tr>
        <th>song</th>
        <th>artist</th>
        <th>album</th>
        <th>genre</th>
        <th>source</th>
      </tr>
    </thead>

    <tbody>
<!--       <tr>
        <td>Hey Jude</td><td>Beatles</td><td>White Album</td><td>Rock</td><td><i class="fab fa-youtube fa-2x"></i></td>
      </tr>
 -->
      <% @songs.each do |song| %>
          <tr>
            <td class="song-row"><a href=""> <%= song.title %></a></td>
            <td class="song-row"><a href=""><%= song.artist %></a></td>
            <td class="song-row"><a href=""> <%= song.album %></a></td>
            <td class="song-row"><a href=""> <%= song.genre %></a></td>
            <% if song.platform_id == Platform.first.id %>
              <td class="song-row"><a href=""> <i class="fab fa-youtube fa-2x"></i></a></td>
            <% elsif song.platform_id == Platform.second.id %>
              <td class="song-row"><a href=""> <i class="fas fa-signal fa-2x"></i></a></td>
            <% else %>
              <td class="song-row"><a href=""> <i class="fas fa-music" id="MusicIcon"></i></a></td>
            <% end %>
          </tr>
      <% end %>

      <div class='edit_hover_class'>
        <a href='#'><%= image_tag('trash-icon.png', width: '40')  %></a>
      </div>

