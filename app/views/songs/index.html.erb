<div style="margin-left: 90px; margin-top: 36px;">
  <h1 class="p-bold" style="padding-left: 12px">My songs</h1>
  <!-- <h1>Songs#index</h1> -->
  <!-- <p>Find me in app/views/songs/index.html.erb</p> -->

  <table class="table table-borderless table-hover" style="margin-top: 36px;">
    <thead class="">
      <!-- color: #F0EEEE -->
      <!-- hover: #C7C1C1 -->
      <tr>
        <th>song</th>
        <th>artist</th>
        <th>album</th>
        <th>genre</th>
        <th>source</th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
          <tr class="track-list-row" data-id=<%= song.external_id %>>
            <td class="song-row"><%= song.title %></td>
            <td class="song-row"><%= song.artist %></td>
            <td class="song-row"><%= song.album %></td>
            <td class="song-row"><%= song.genre %></td>
            <% if song.platform_id == Platform.first.id %>
              <td class="song-row"><a href=""> <i class="fab fa-youtube fa-2x"></i></a></td>
            <% elsif song.platform_id == Platform.second.id %>
              <td class="song-row"><a href=""> <i class="fab fa-soundcloud fa-2x"></i></a></td>
            <% else %>
              <td class="song-row"><a href=""> <i class="fas fa-music" id="MusicIcon"></i></a></td>
            <% end %>
          </tr>
      <% end %>


